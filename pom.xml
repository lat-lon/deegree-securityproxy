      <dependency>
        <groupId>org.geotools</groupId>
        <artifactId>gt-epsg-hsql</artifactId>
        <version>${geotools.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <scm>
    <connection>scm:git:git@github.com:lat-lon/deegree-securityproxy.git</connection>
    <developerConnection>scm:git:git@github.com:lat-lon/deegree-securityproxy.git</developerConnection>
    <url>https://github.com/lat-lon/deegree-securityproxy.git</url>
  </scm>

  <repositories>
    <repository>
      <id>latlon-repo</id>
      <url>http://repo.lat-lon/nexus/content/groups/public/</url>
    </repository>
    <repository>
      <id>j2ep-releases</id>
      <url>http://repo.lat-lon/nexus/content/repositories/j2ep-release/</url>
    </repository>
    <repository>
      <id>j2ep-snapshots</id>
      <url>http://repo.lat-lon/nexus/content/repositories/j2ep-snapshots/</url>
    </repository>
    <repository>
      <id>secproxy-releases</id>
      <url>http://repo.lat-lon/nexus/content/repositories/deegree-securityproxy/</url>
    </repository>
    <repository>
      <id>secproxy-snapshots</id>
      <url>http://repo.lat-lon/nexus/content/repositories/deegree-securityproxy-snapshots/</url>
    </repository>
    <repository>
      <id>opengeo</id>
      <url>http://repo.opengeo.org/</url>
    </repository>
  </repositories>

  <distributionManagement>
    <repository>
      <id>secproxy-releases</id>
      <url>http://repo.lat-lon/nexus/content/repositories/deegree-securityproxy/</url>
    </repository>
    <snapshotRepository>
